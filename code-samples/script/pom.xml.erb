    <dependency>
      <groupId>com.google.cloud</groupId>
      <artifactId>google-cloud-language</artifactId>
      <version>1.62.0</version>
    </dependency>
    <!-- Command Line Arguments for Samples -->
    <dependency>
      <groupId>commons-cli</groupId>
      <artifactId>commons-cli</artifactId>
      <version>1.4</version>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>AnalyzeEntitiesRequestLanguageEntitiesGcs</id>
      <activation>
        <property>
          <name>AnalyzeEntitiesRequestLanguageEntitiesGcs</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.6.0</version>
            <executions>
              <execution>
                <goals>
                  <goal>java</goal>
                </goals>
              </execution>
            </executions>
            <configuration>
              <mainClass>com.google.cloud.examples.language.v1.AnalyzeEntitiesRequestLanguageEntitiesGcs</mainClass>
              <cleanupDaemonThreads>false</cleanupDaemonThreads>
